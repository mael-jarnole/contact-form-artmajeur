{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block main %}

    <div class="accordion" id="accordion">
        {% for email in messagesByEmails|keys %}
            <div class="accordion-item">
                <h2 class="accordion-header" id="header-{{ loop.index }}">
                    <button class="accordion-button collapsed"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#content-{{ loop.index }}"
                            aria-expanded="false"
                            aria-controls="content-{{ loop.index }}"
                    >
                        <span class="badge bg-primary rounded-pill mx-2">{{ messagesByEmails[email]|length }}</span>
                        {{ email }}
                    </button>
                </h2>
                <div id="content-{{ loop.index }}"
                     class="accordion-collapse collapse"
                     aria-labelledby="header-{{ loop.index }}"
                     data-bs-parent="#accordion"
                >
                    <div class="accordion-body">
                        {% for message in messagesByEmails[email] %}
                            <div class="card mb-2">
                                <div class="card-body">
                                    <h5 class="card-title">{{ message.username }}</h5>
                                    <h6 class="card-subtitle mb-2 text-muted">{{ message.email }}</h6>
                                    <p class="card-text">{{ message.content }}</p>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
