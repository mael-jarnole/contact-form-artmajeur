<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}{% endblock %}</title>
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('main') }}
    {% endblock %}
    <link rel="icon" href="{{ asset('build/img/favicon.png') }}">

    {% block javascripts %}
        {{ encore_entry_script_tags('main') }}
    {% endblock %}
</head>
<body>
<div id="ContactPageContainer" class="container d-flex flex-column vh-100">
    <header class="row">
        <img class="m-4"
             alt="Artmajeur Galerie d'Art en ligne"
             height="48px"
             src="{{ asset('build/img/artmajeur_logo_trans.svg') }}"
        >
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="#">
                    <img
                            src="{{ asset('build/img/favicon.png') }}"
                            alt=""
                            width="30"
                            height="24"
                            class="d-inline-block align-text-top"
                    >
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#NavbarSupportedContent" aria-controls="NavbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="NavbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a
                                    class="nav-link {{ app.request.get("_route") == "homepage" ? "active" }}"
                                    href="/"
                            >
                                Accueil
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link {{ app.request.get("_route") == "contact" ? "active" }}" href="/contact">
                                Nous contacter
                            </a>
                        </li>
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link {{ app.request.get("_route") == "app_admin" ? "active" }}" href="/admin">
                                    Administration
                                </a>
                            </li>
                        {% endif %}
                        {% if not app.user %}
                            <li class="nav-item">
                                <a class="nav-link {{ app.request.get("_route") == "app_login" ? "active" }}" href="/login">
                                    Se connecter
                                </a>
                            </li>
                        {% endif %}
                        {% if app.user %}
                            <li class="nav-item">
                                <a class="nav-link" href="/logout">
                                    Se d√©connecter
                                </a>
                            </li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <main id="ContactFormContainer"
          class="row justify-content-center align-content-center flex-grow-1"
    >
        {% block main %}{% endblock %}
    </main>
</div>
</body>
</html>
